<%- include("./userTemplates/header2") %>
<%- include("./userTemplates/menu") %>

<div  id="signupModal">
  <div class="modal-dialog">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h3>SignUp</h3>
        <button type="button" class="btn-close btn-close-white" aria-label="Close"></button>
      </div>
      <div class="modal-body p-5">
        <form id="login-form" action="/login/signup" method="POST">
          <input type="text" id="login-email" name="email" class="form-control mb-3" placeholder="Title">
          <input type="text" id="login-password" name="password" class="form-control mb-3" placeholder="Password">
          <button type="submit" class="btn btn-success w-100 mb-4">SignUp</button>
          <button type="button" class="btn btn-info" id="googleLogin">Google</button>
          <button type="button" class="btn btn-primary" id="facebookLogin">Facebook</button>
          <button type="button" class="btn btn-dark" id="githubLogin">Github</button>
        </form>
      </div>
      <!-- Cierre de div.modal-content -->
    </div>
    <!-- Cierre de div.modal-dialog -->
  </div>
  <!-- Cierre de div.modal.fade -->
</div>
