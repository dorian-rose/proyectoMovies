<%- include('./userTemplates/header2') %>
<%- include("userTemplates/nav") %>

<% if (movieData.ok !=false||movieData.Response== "True") { %>

  <section class="movie-card centerText gridContainerMax-2c maxWidthMedium">

    <div>
      <img src="<%=movieData.Poster%>" alt="<%=movieData.Title %> " />
    </div>

    <article>
      
      <h1><%=movieData.Title %></h1>
      
      <div class="movie-facts">
        <span>Year: <%=movieData.Year%>, </span>
        <span>Duration: <%= movieData.Runtime %>, </span>
        <span>Genre: <%= movieData.Genre %> </span>
      </div>

      <h4>Director:</h4>
      <p><%= movieData.Director %></p>

      <h4>Cast:</h4>
      <p><%= movieData.Actors %></p>

      <h4>Plot:</h4>
      <p><%= movieData.Plot %></p>

      <a href="/movies/add/2/Walkabout">Add to favourites</a>

      <form action="/movies/add" method="post" id="add-movie">
        <input type="text" name="movie" id="movie" value="<%= movieData.Title %>"/>
        <input type="submit"/>
      </form>

    </article>
  </section>


<% } else { %>
<p class="error-message"><%= movieData.msg %></p>
<% } %>

<%- include("./userTemplates/footer") %>
